{
  "name": "network-pulse",
  "version": "2.0.0",
  "description": "",
  "main": "dist/server.bundle.js",
  "scripts": {
    "bootstrap": "shx rm -rf dist && shx mkdir dist",
    "start": "npm run build && npm-run-all --parallel server watch:**",
    "build": "npm run build:client && npm run build:server",
    "build:server": "webpack --config webpack.server.config.js",
    "build:client": "npm run bootstrap && npm run build:assets && npm run build:js && npm run build:scss && npm run build:static",
    "build:assets": "cp -r assets dist",
    "build:js": "webpack --optimize-minimize --display-error-details",
    "build:scss": "node-sass scss/main.scss dist/css/main.css && postcss --use autoprefixer --autoprefixer.browsers 'last 3 versions' -o dist/css/main.css dist/css/main.css",
    "build:static": "cp -r node_modules/mofo-bootstrap/dest/css dist && cp -r node_modules/font-awesome/css/font-awesome.min.css dist/css && cp -r node_modules/font-awesome/fonts dist && postcss --use autoprefixer --autoprefixer.browsers 'last 3 versions' -o dist/css/mofo-bootstrap.css dist/css/mofo-bootstrap.css && cp index.html dist/index.html && cp favicon.png dist && cp manifest.json dist",
    "server": "node dist/server.bundle.js",
    "watch:css": "chokidar 'components/**/*.scss' 'pages/**/*.scss' 'scss/**/*.scss' -c 'npm run build:scss'",
    "watch:html": "chokidar 'index.html' -c 'npm run build:static'",
    "watch:js": "chokidar 'main.jsx' 'js/**/*.js' 'components/**/*.jsx' 'pages/**/*.jsx' 'webpack.config.js' -c 'npm run build:js'",
    "test": "npm-run-all test:**",
    "test:js": "eslint --config .eslintrc.yaml 'main.jsx' 'js/**/*.js' 'components/**/*.jsx' 'pages/**/*.jsx' webpack.config.js",
    "test:scss": "stylelint --config .stylelintrc 'components/**/*.scss' 'pages/**/*.scss' 'scss/**/*.scss' --syntax scss",
    "postinstall": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mozilla/network-pulse.git"
  },
  "author": "Mozilla",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/mozilla/network-pulse/issues"
  },
  "homepage": "https://github.com/mozilla/network-pulse#readme",
  "devDependencies": {
    "chokidar": "^1.6.1",
    "chokidar-cli": "^1.2.0",
    "eslint": "^3.11.1",
    "eslint-plugin-react": "^6.7.1",
    "mofo-style": "^2.4.0",
    "npm-run-all": "^3.1.1",
    "stylelint": "^7.6.0",
    "stylelint-config-standard": "^15.0.0"
  },
  "dependencies": {
    "autoprefixer": "^6.5.3",
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.9",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "classnames": "^2.2.5",
    "express": "^4.14.0",
    "font-awesome": "^4.7.0",
    "mofo-bootstrap": "^2.0.1",
    "moment": "^2.17.1",
    "node-sass": "^3.13.0",
    "postcss-cli-simple": "^1.0.1",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-router": "^3.0.0",
    "shx": "^0.2.1",
    "slug": "^0.9.1",
    "superagent": "^3.3.0",
    "webpack": "^1.14.0"
  },
  "engines": {
    "node": "^6.9.1",
    "npm": "^3.10.10"
  }
}
